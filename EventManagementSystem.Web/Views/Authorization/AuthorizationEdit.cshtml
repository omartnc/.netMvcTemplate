@model EventManagementSystem.Web.Models.AuthorizationModel

<form method="post">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <h4 class="card-title">
                    <strong>Yetki Grubu Düzenle</strong>
                </h4>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Adı</label>
                                @Html.TextBoxFor(model => model.Role.Name, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Açıklaması</label>
                                @Html.TextBoxFor(model => model.Role.Description, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="card-footer text-right">
                    <button type="submit" class="btn btn-info btn-label" href="#">
                        <label><i class="fa fa-save"></i></label> Güncelle
                    </button>
                </footer>
            </div>
        </div>
    </div>
</form>